# FitGen AI v5.0 - Environment Configuration
# Copy this file to .env and update values as needed

# ============================================================================
# MONGODB CONFIGURATION
# ============================================================================

# Local MongoDB (default)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=fitgen_db

# MongoDB Atlas (Cloud)
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
# Example: mongodb+srv://fitgen_user:MySecurePassword123@cluster0.abcdef.mongodb.net/fitgen_db?retryWrites=true&w=majority
MONGODB_ATLAS_URI=

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment
APP_ENV=development
# Options: development, staging, production

# Application name
APP_NAME=FitGen AI v5.0

# Application version
APP_VERSION=5.0.0

# ============================================================================
# DATASET CONFIGURATION
# ============================================================================

# Path to MegaGym dataset CSV
DATASET_CSV_PATH=./data/megaGymDataset.csv

# ============================================================================
# FEATURE FLAGS (All 42 Features)
# ============================================================================

# Core Features
FEATURE_1_EXERCISE_DATABASE=true
FEATURE_2_WEEKLY_PLANS=true
FEATURE_3_DAILY_WORKOUTS=true

# Safety & Personalization
FEATURE_4_BMI_SAFETY=true
FEATURE_5_INJURY_TRACKING=true
FEATURE_6_FITNESS_LEVELS=true
FEATURE_7_GOAL_PROGRAMMING=true

# Machine Learning
FEATURE_8_ML_VOLUME_ADAPTATION=true
FEATURE_9_RPE_REST_ADJUSTMENT=true
FEATURE_10_PREFERENCE_LEARNING=true
FEATURE_11_RECENCY_MANAGEMENT=true
FEATURE_12_EXERCISE_SCORING=true

# Fallback Systems
FEATURE_13_CASCADE_FALLBACK=true
FEATURE_14_EMERGENCY_FALLBACK=true

# Progress Tracking
FEATURE_15_SESSION_LOGGING=true
FEATURE_16_WEEKLY_SUMMARY=true
FEATURE_17_STREAK_TRACKING=true
FEATURE_18_STRENGTH_PROGRESS=true
FEATURE_19_DATA_EXPORT=true

# Motivation
FEATURE_20_MOTIVATION_MESSAGES=true
FEATURE_21_MOOD_CHECKIN=true
FEATURE_22_BREATHING_EXERCISES=true
FEATURE_23_DAILY_TIPS=true
FEATURE_24_MOTIVATION_HISTORY=true

# User Management
FEATURE_25_USER_PROFILES=true
FEATURE_26_USER_DATA=true
FEATURE_27_PROFILE_EDITING=true

# Database
FEATURE_28_MONGODB=true
FEATURE_29_ADMIN_TOOLS=true
FEATURE_30_DATA_IMPORT=true

# UI & Interface
FEATURE_31_CLI_MENU=true
FEATURE_32_WORKOUT_DISPLAY=true
FEATURE_33_INTERACTIVE_FEATURES=true

# Technical
FEATURE_34_FASTAPI=false
FEATURE_35_ERROR_HANDLING=true
FEATURE_36_CONFIGURATION=true
FEATURE_37_SYNTHETIC_DATA=false

# Advanced
FEATURE_38_EXERCISE_VARIETY=true
FEATURE_39_PROGRESSIVE_OVERLOAD=true
FEATURE_40_SMART_REST=true
FEATURE_41_WARMUP_COOLDOWN=true
FEATURE_42_EXERCISE_NOTES=true

# ============================================================================
# DATABASE BACKUP
# ============================================================================

# Enable automatic backups
AUTO_BACKUP_ENABLED=true

# Backup frequency (hours)
BACKUP_FREQUENCY=24

# Backup directory
BACKUP_DIR=./backups

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Database connection timeout (milliseconds)
DB_CONNECTION_TIMEOUT=5000

# Query timeout (milliseconds)
DB_QUERY_TIMEOUT=30000

# Cache size (number of items)
CACHE_SIZE=1000

# Batch size for data import
BATCH_SIZE=500

# ============================================================================
# SECURITY
# ============================================================================

# JWT Secret (for API authentication, if using FastAPI)
JWT_SECRET=your-super-secret-key-change-this-in-production

# API Key (optional, for API authentication)
API_KEY=your-api-key-here

# ============================================================================
# EMAIL NOTIFICATIONS (Optional)
# ============================================================================

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email recipients for notifications
NOTIFICATION_EMAIL=user@example.com

# ============================================================================
# EXTERNAL APIs (Optional)
# ============================================================================

# Fitness tracking API (optional, for advanced integration)
FITNESS_API_KEY=
FITNESS_API_URL=

# ============================================================================
# DEBUG & DEVELOPMENT
# ============================================================================

# Debug mode (disable in production!)
DEBUG=false

# Verbose logging
VERBOSE_LOGGING=false

# Enable test data generation
GENERATE_TEST_DATA=false

# Number of test users to generate
TEST_USERS_COUNT=100

# Number of test sessions to generate
TEST_SESSIONS_COUNT=5000

# ============================================================================
# CLOUD DEPLOYMENT
# ============================================================================

# AWS Configuration (if using AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=fitgen-backups

# Google Cloud Configuration (if using GCP)
GCP_PROJECT_ID=
GCP_CREDENTIALS_FILE=

# Azure Configuration (if using Azure)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=

# ============================================================================
# SCHEDULED TASKS
# ============================================================================

# Run cleanup task daily
CLEANUP_ENABLED=true
CLEANUP_TIME=02:00  # 2 AM

# Delete logs older than N days
DELETE_LOGS_OLDER_THAN=90

# ============================================================================
# RATE LIMITING (for API, if using FastAPI)
# ============================================================================

# Requests per minute
RATE_LIMIT_PER_MINUTE=60

# Requests per hour
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Send reminder notifications
ENABLE_REMINDERS=true

# Reminder time (24-hour format)
REMINDER_TIME=08:00

# Email reminder
EMAIL_REMINDERS=true

# Push notification (if app supports it)
PUSH_NOTIFICATIONS=false
